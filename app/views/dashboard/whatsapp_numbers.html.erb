<script>
document.getElementById('whatsapp-form').addEventListener('submit', function(e) {
  e.preventDefault();
  
  const formData = new FormData(this);
  
  fetch('/api/v1/users/whatsapp_numbers', {
    method: 'POST',
    headers: {
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
    },
    body: formData
  })
  .then(response => response.json())
  .then(data => {
    if (data.whatsapp_number) {
      alert('¬°N√∫mero agregado exitosamente!');
      location.reload();
    } else {
      alert('Error: ' + (data.errors ? data.errors.join(', ') : 'Error desconocido'));
    }
  })
  .catch(error => {
    console.error('Error:', error);
    alert('Error al agregar n√∫mero');
  });
});

function deleteNumber(numberId) {
  if (confirm('¬øEst√°s seguro de que quieres eliminar este n√∫mero?')) {
    fetch(`/api/v1/users/whatsapp_numbers/${numberId}`, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.message) {
        alert('N√∫mero eliminado exitosamente');
        location.reload();
      } else {
        alert('Error al eliminar n√∫mero');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error al eliminar n√∫mero');
    });
  }
}
</script>